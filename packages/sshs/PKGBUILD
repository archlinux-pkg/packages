# Maintainer: MedzikUser <nivua1fn@duck.com>
pkgname='sshs'
pkgver='3.1.0'
pkgrel=1
pkgdesc='Terminal user interface for SSH'
arch=('x86_64')
url="https://github.com/quantumsheep/sshs"
license=('MIT')

depends=('glibc' 'openssh')
makedepends=('git' 'go')

source=("$pkgname-$pkgver.tar.gz::$url/archive/$pkgver.tar.gz")
sha512sums=('8e54b9a1934be9fbddf9057415650232330c82562b02a2199dfab19dd9aae81d7e217097cf0ca2d3a4df7217c4451d53231f29e99f6fa6f8cebc10b9cc80f4d2')

build() {
  cd "$pkgname-$pkgver"
  make VERSION="$pkgver"
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
