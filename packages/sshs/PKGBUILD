_repo='quantumsheep/sshs'
_ver=3.0.0
_auto_update=true

pkgname='sshs'
pkgver=3.0.0
pkgrel=1
pkgdesc='Terminal user interface for SSH'
arch=('x86_64')
url="https://github.com/$_repo"
license=('MIT')

depends=('glibc' 'openssh')
makedepends=('git' 'go')

source=("$pkgname-$pkgver.tar.gz::$url/archive/$_ver.tar.gz")
sha512sums=('f5bfd43effcd5e46993bae0e07b57ba2859542b1b392a08dc15a87e87f3ebd2504012f23bc3cea81117147deb1aeb60c11e0a61244ab74d565f1bedd882697b3')

build() {
  cd "$pkgname-$pkgver"
  make VERSION="$pkgver"
}

package() {
  cd "$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
}
