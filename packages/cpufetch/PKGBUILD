# Maintainer: MedzikUser

_repo='Dr-Noob/cpufetch'
_ver=v1.00
_auto_update=true

_pkgname='cpufetch'
pkgname="${_pkgname}"
provides=("${_pkgname}")
conflicts=("${_pkgname}")
pkgver=1.00
pkgrel=1
pkgdesc='Simple yet fancy CPU architecture fetching tool'
arch=('x86_64')
url="https://github.com/${_repo}"
license=('MIT')
makedepends=('git')
source=("${_pkgname}::git+${url}#tag=${_ver}")
sha256sums=('SKIP')

build() {
  cd "$pkgname"
  make
}

package() {
  cd "$pkgname"
  make DESTDIR="$pkgdir" install
}
