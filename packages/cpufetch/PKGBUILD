# Maintainer: MedzikUser <nivua1fn@duck.com>
_repo='Dr-Noob/cpufetch'
_ver=v1.01
_auto_update=true
_auto_update_github_tag=true

pkgname='cpufetch'
pkgver=1.01
pkgrel=1
pkgdesc='Simple yet fancy CPU architecture fetching tool'
arch=('x86_64')
url="https://github.com/$_repo"
license=('MIT')

source=("$pkgname-$pkgver.tar.gz::$url/archive/$_ver.tar.gz")
sha256sums=('d4fe25adc4d12f5f1dc7a7e70a4ed92e9807b6a1ad0294c563a0250f7bd6aca1')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  make DESTDIR="$pkgdir" install
  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
