# Maintainer: MedzikUser <nivua1fn@duck.com>
_repo='0x192/universal-android-debloater'
_ver=0.4.1
_auto_update=true

pkgname="universal-android-debloater"
pkgver=0.4.1
pkgrel=1
pkgdesc='Cloudflare Tunnel client (formerly Argo Tunnel)'
arch=('x86_64')
url="https://github.com/${_repo}"
license=('GPL3')

depends=('android-tools' 'expat' 'freetype2')
makedepends=('cargo' 'libxkbcommon' 'pkg-config')

source=("$pkgname-$pkgver.tar.gz::$url/archive/${_ver}.tar.gz")
sha256sums=('SKIP')
options=('!lto')

prepare() {
  cd "$srcdir/$pkgname-$pkgver"

  export RUSTUP_TOOLCHAIN=nightly
  cargo fetch --target "$CARCH-unknown-linux-gnu"
}

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # OpenGL
  cargo build --release --features glow
  mv target/release/uad_gui target/release/uad_gui-opengl

  # Vulkan
  cargo build --release --features wgpu
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  install -Dm755 target/release/uad_gui{,-opengl} -t "$pkgdir/usr/bin"
  install -Dm644 "$srcdir"/uad_gui{,-opengl}.desktop -t "$pkgdir/usr/share/applications"

  install -Dm 644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
