# Maintainer: MedzikUser

_repo='plamere/spotipy'
_ver=2.19.0
_auto_update=true

_pkgname='spotipy'
pkgname="python-$_pkgname"
provides=("$_pkgname")
conflicts=("$_pkgname")
pkgver=2.19.0
pkgrel=2
pkgdesc='A light weight Python library for the Spotify Web API'
arch=('any')
url="https://github.com/$_repo"
license=('MIT')
depends=('python-requests' 'python-six')
makedepends=('jq' 'git' 'python-setuptools')
source=("$_pkgname::git+$url#tag=$_ver")
sha256sums=('SKIP')

build() {
  cd "$srcdir/$_pkgname"
  python setup.py build
}

package() {
  cd "$srcdir/$_pkgname"

  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
  install -Dm 644 LICENSE.md "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
