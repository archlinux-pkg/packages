# Maintainer: MedzikUser <nivua1fn@duck.com>
_repo='Heroic-Games-Launcher/HeroicGamesLauncher'
_ver=v2.2.5
_auto_update=true

pkgname='heroic-games-launcher'
pkgdesc='A Native GUI Epic Games Launcher and GOG for Linux, Windows and Mac'
pkgver=2.2.5
pkgrel=1
arch=('x86_64')
url="https://github.com/$_repo"
license=('GPL3')

depends=('fuse2' 'gawk' 'zstd')
optdepends=('legendary')

_file="heroic-$pkgver.pacman"
source=("$_file::$url/releases/download/$_ver/$_file")
sha256sums=('b465459f5d3020595ebd99d99ea4b2320adf1bb48a21e3e82ef18e53d22da8af')
options=(!strip)

package() {
  tar xJf "$_file" -C "$pkgdir" usr opt

  mkdir "$pkgdir/usr/bin"
  ln -s "/opt/Heroic/heroic" "$pkgdir/usr/bin/heroic"
}
