_repo='martin31821/cpupower'
_ver=v10.0.1
_auto_update=true

_pkgname='cpupower'
pkgname='cpufreqctl'
pkgver=10.0.1
pkgrel=3
pkgdesc="Manage the frequency scaling driver of your CPU for GNOME (Intel Core and AMD Ryzen processors supported)"
arch=('any')
url="https://github.com/$_repo"
license=('GPL')

depends=('gnome-shell')
makedepends=('zip')

source=("$_pkgname-$pkgver.tar.gz::$url/archive/$_ver.tar.gz")
sha256sums=('SKIP')

package() {
  cd "$srcdir/$_pkgname-$pkgver"
  make install PREFIX="$pkgdir/usr"
}
