#!/bin/bash

DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )

source ${DIR}/PKGBUILD

git clone "https://github.com/${_repo}.git" "${DIR}/git" --depth 1

_pkgver() {
  cd "${DIR}/git"
  git log -1 --date=short --pretty=format:"%H"
}

_ver=$(_pkgver)
pkgver=${_ver}

rm -rf "${DIR}/git"
